<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th width="5%" class="text-xs-right">ID</th>
          <th>Name</th>
          <th width="10%" class="text-xs-right">Price</th>
          <th width="10%" class="text-xs-right">VAT</th>
        </tr>
      </thead>
      <tbody>
      <% products.each do |product| %>
        <tr>
          <th scope="row" class="text-xs-right">
            <span class="id"><%= product.id %></span>
          </th>
          <td>
            <span class="name"><%= product.name %></span>
          </td>
          <td class="text-xs-right">
            <span class="price"><%= product.price_with_vat %></span>
          </td>
          <td class="text-xs-right">
            <span class="vat">(VAT <%= product.vat %>)</span>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
