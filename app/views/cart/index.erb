<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th width="5%" class="text-xs-right">No.</th>
          <th>Product</th>
          <th width="10%" class="text-xs-right">Unit Price</th>
          <th width="10%" class="text-xs-right">VAT</th>
          <th width="10%" class="text-xs-right">Quantity</th>
          <th width="10%" class="text-xs-right">Subtotal</th>
        </tr>
      </thead>
      <tfoot>
        <tr class="table-info">
          <th colspan="5" class="text-xs-right">Total w/ VAT:</th>
          <th class="text-xs-right"><%= cart.total_with_vat %></th>
        </tr>
      </tfoot>
      <tbody>
      <% cart.items.each_with_index do |cart_item, no| %>
        <tr>
          <th scope="row" class="text-xs-right">
            <span class="id"><%= no + 1 %>.</span>
          </th>
          <td>
            <span class="name"><%= cart_item.product.name %></span>
          </td>
          <td class="text-xs-right">
            <span class="price"><%= cart_item.product.price_with_vat %></span>
          </td>
          <td class="text-xs-right">
            <span class="vat"><%= cart_item.product.vat %></span>
          </td>
          <td class="text-xs-right">
            <span class="quantity"><%= cart_item.quantity %></span>
          </td>
          <td class="text-xs-right">
            <span class="total font-weight-bold"><%= cart_item.total_with_vat %></span>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
